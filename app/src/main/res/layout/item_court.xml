<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:maxHeight="150dp"
    android:padding="10dp"
    android:layout_marginTop="15dp"
    android:background="@color/black">

    <ImageView
        android:id="@+id/ivCourt"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:contentDescription="@string/court_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tvCourtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/ivCourt"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Liverpool" />

    <TextView
        android:id="@+id/tvCourtCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/ivCourt"
        app:layout_constraintTop_toBottomOf="@id/tvCourtName"
        tools:text="Sincelejo" />

    <TextView
        android:id="@+id/tvCourtAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textStyle="italic"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Calle 24 # 39-80" />

</androidx.constraintlayout.widget.ConstraintLayout>